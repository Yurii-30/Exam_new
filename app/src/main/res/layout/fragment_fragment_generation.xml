<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/engine_6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.Fragment_generation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/engineOpel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="0dp"
            android:text="@string/engine" />

        <Spinner
            android:id="@+id/spinnerEngine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/engineOpel"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="0dp"
            android:background="#A0E6AF"
            android:entries="@array/Opel_engines"
            android:keepScreenOn="true" />

        <Button
            android:id="@+id/btnForwardtoConfig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerEngine"
            android:layout_alignParentStart="true"
            android:layout_marginStart="134dp"
            android:layout_marginTop="98dp"
            android:text="@string/forward" />
    </RelativeLayout>


</FrameLayout>